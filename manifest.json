{
    "manifest_version": 3,
    "name": "Lifetime Payment",
    "description": "Display prices as lifetime cost based on hourly wage.",
    "icons": {
        "128": "images/icon_128.png"
    },
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}